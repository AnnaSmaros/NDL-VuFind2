<form method="post" class="inline" id="messaging-form">
  <h3><?= $this->transEsc('messaging_settings_title') ?></h3>
  <table class="table useraccount-table">
    <? foreach ($profile['messagingServices'] as $service): ?>
      <tr>
        <td>
          <?
          echo $service['type'] . ': ';
          $notFound = true;
          foreach ($service['sendMethods'] as $method) {
            if ($method['active']) {
              echo $method['method'];
              $notFound = false;
              break;
            }
          }
          if ($notFound) {
              echo $this->transEsc('messaging_settings_method_none');
          }
          ?>
        </td>
      </tr>
    <? endforeach; ?>
    <tr>
      <td>
        <a id="profile-messaging-update" class="modal-link controller:MyResearch" href="<?=$this->url()?>"><?= $this->transEsc('request_messaging_settings_change') ?></a>
      </td>
    </tr>
  </table>
</form>
